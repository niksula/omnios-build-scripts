 FcBool
 mkdir_p(const char *dir)
@@ -42,6 +43,7 @@ unlink_dirs(const char *dir)
     while ((e = readdir(d)) != NULL)
     {
 	size_t l;
+	struct stat st;
 
 	if (strcmp (e->d_name, ".") == 0 ||
 	    strcmp (e->d_name, "..") == 0)
@@ -53,7 +55,8 @@ unlink_dirs(const char *dir)
 	strcpy (n, dir);
