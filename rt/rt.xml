<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="postgresql">
    <service name="application/rt" type="service" version="1">
        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>

        <create_default_instance enabled="false"/>
        <single_instance/>

        <exec_method type="method" name="start" exec="/opt/rt4/sbin/rt-server.fcgi --socket /tmp/bar" timeout_seconds="60"/>

        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="60"/>

        <method_context>
            <method_credential user="rt" group="rt"/>
        </method_context>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="contract"/>
        </property_group>

        <stability value="Evolving"/>

        <template>
            <common_name>
                <loctext xml:lang="C">
                    RT - Request Tracker
                </loctext>
            </common_name>
        </template>

    </service>
</service_bundle>
