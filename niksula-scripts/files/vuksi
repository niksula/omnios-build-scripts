#!/bin/sh

echo "doing the phuksi-stuff: "

echo -n "changing signature..."
if /p/bin/ggrep -q '^-- $' $HOME/.signature;
then 
cp $HOME/.signature $HOME/.signature.VUKSI
echo "--"> $HOME/.signature
/p/bin/ggrep -v '^-- $' $HOME/.signature.VUKSI >> $HOME/.signature
fi

if not /p/bin/ggrep -q 'VUKSI' $HOME/.signature;
then
echo "OLINPA VUKSI" >> $HOME/.signature
echo "[automatically generated by vuksi]" >> $HOME/.signature
date >> $HOME/.signature
fi
echo "done."

echo -n "posting to -h ..."

echo post > $HOME/.vuksi.$LOGNAME
echo From: $LOGNAME\@niksula.hut.fi >> $HOME/.vuksi.$LOGNAME
echo Subject: olinpa vuksi>> $HOME/.vuksi.$LOGNAME
echo Newsgroups: -h>> $HOME/.vuksi.$LOGNAME
echo "">> $HOME/.vuksi.$LOGNAME
echo Hitsasin ja olin vuksi. siksipä en enää jätä koskaan tunnustani>> $HOME/.vuksi.$LOGNAME
echo lukitsematta päätteelle.>> $HOME/.vuksi.$LOGNAME
echo "">> $HOME/.vuksi.$LOGNAME
cat $HOME/.signature >> $HOME/.vuksi.$LOGNAME
echo "">> $HOME/.vuksi.$LOGNAME
echo ".">> $HOME/.vuksi.$LOGNAME
echo "quit" >> $HOME/.vuksi.$LOGNAME

cat $HOME/.vuksi.$LOGNAME | telnet news.tky.fi nntp > /dev/null

rm $HOME/.vuksi.$LOGNAME

echo "done."
echo


